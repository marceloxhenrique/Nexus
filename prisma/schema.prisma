generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(uuid())
  name           String
  email          String    @unique
  slug           String    @unique
  image          String?
  avatar         String?
  followers      Int       @default(0)
  occupation     String?
  role           String    @default("user")
  bio            String?
  bioMarkdown    String?
  socials        String[]
  verified       Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  articles       Article[] @relation("AuthorIdRelation")
  articlesBySlug Article[] @relation("UserSlugRelation")
  emailVerified  Boolean?
  sessions       Session[]
  accounts       Account[]
  follower       Follow[]  @relation("UserFollowers")
  following      Follow[]  @relation("UserFollowing")

  @@map("user")
}

model Follow {
  id            String   @id
  followerSlug  String
  followingSlug String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  follower  User? @relation(name: "UserFollowers", fields: [followerSlug], references: [slug], onDelete: Cascade)
  following User? @relation(name: "UserFollowing", fields: [followingSlug], references: [slug], onDelete: Cascade)

  @@unique([followerSlug, followingSlug])
  @@map("follow")
}

model Article {
  id            String   @id @default(uuid())
  title         String
  slug          String   @unique
  content       String
  image         String?
  likes         Int      @default(0)
  views         Int      @default(0)
  tags          String[]
  readTime      Int      @default(0)
  published     Boolean  @default(false)
  commentsCount Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  author   User   @relation(name: "AuthorIdRelation", fields: [authorId], references: [id], onDelete: Cascade)
  authorId String

  userSlug   User   @relation(name: "UserSlugRelation", fields: [authorSlug], references: [slug], onDelete: Cascade)
  authorSlug String

  @@map("article")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}
